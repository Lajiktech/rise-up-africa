# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=riseup
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=riseup_africa
POSTGRES_PORT=5432

# API Configuration
API_PORT=4000
JWT_SECRET=change-this-to-a-strong-secret-minimum-32-characters-long

# Web Configuration
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# Database URL (for API)
# This will be auto-generated from POSTGRES_* variables in docker-compose
# For standalone API deployment, use:
# DATABASE_URL=postgresql://riseup:change-this-password@postgres:5432/riseup_africa?schema=public

# Node Environment
NODE_ENV=production
