// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  YOUTH
  DONOR
  ADMIN
  FIELD_AGENT
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
  UNDER_REVIEW
}

enum ApplicationStatus {
  PENDING
  UNDER_REVIEW
  SELECTED
  REJECTED
}

enum YouthCategory {
  REFUGEE
  IDP
  VULNERABLE
  PWD
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  phone     String?
  role      UserRole @default(YOUTH)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Youth-specific fields
  category    YouthCategory?
  country     String?
  camp        String?
  community   String?
  dateOfBirth DateTime?
  gender      String?

  // Donor-specific fields
  organizationName String?
  organizationType String?

  // Relations
  documents          Document[]
  verifications      Verification[]
  fieldVisits        FieldVisit[]
  opportunities      Opportunity[]
  applications       Application[]
  adminVerifications Verification[] @relation("AdminVerifications")
  fieldVerifications Verification[] @relation("FieldVerifications")
}

model Document {
  id         String   @id @default(cuid())
  userId     String
  type       String // "ID", "TRANSCRIPT", "RECOMMENDATION_LETTER"
  fileName   String
  fileUrl    String
  mimeType   String?
  size       Int?
  uploadedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Verification {
  id           String             @id @default(cuid())
  userId       String
  status       VerificationStatus @default(PENDING)
  adminId      String?
  fieldAgentId String?
  adminNotes   String?
  fieldNotes   String?
  verifiedAt   DateTime?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  admin       User?        @relation("AdminVerifications", fields: [adminId], references: [id])
  fieldAgent  User?        @relation("FieldVerifications", fields: [fieldAgentId], references: [id])
  fieldVisits FieldVisit[]

  @@unique([userId])
  @@index([userId])
  @@index([status])
}

model FieldVisit {
  id             String   @id @default(cuid())
  verificationId String
  fieldAgentId   String
  visitDate      DateTime
  notes          String?
  photos         String[] // URLs to photos
  createdAt      DateTime @default(now())

  verification Verification @relation(fields: [verificationId], references: [id], onDelete: Cascade)
  fieldAgent   User         @relation(fields: [fieldAgentId], references: [id])

  @@index([verificationId])
  @@index([fieldAgentId])
}

model Opportunity {
  id            String          @id @default(cuid())
  donorId       String
  title         String
  description   String
  requirements  String?
  category      YouthCategory[]
  countries     String[]
  deadline      DateTime?
  maxApplicants Int?
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  donor        User          @relation(fields: [donorId], references: [id], onDelete: Cascade)
  applications Application[]

  @@index([donorId])
  @@index([isActive])
}

model Application {
  id             String            @id @default(cuid())
  youthId        String
  opportunityId  String
  status         ApplicationStatus @default(PENDING)
  coverLetter    String?
  additionalInfo String?
  submittedAt    DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  youth       User        @relation(fields: [youthId], references: [id], onDelete: Cascade)
  opportunity Opportunity @relation(fields: [opportunityId], references: [id], onDelete: Cascade)

  @@unique([youthId, opportunityId])
  @@index([youthId])
  @@index([opportunityId])
  @@index([status])
}
